@{
}

@model Book

<!-- Card layout for displaying book details -->
<div class="card m-1 p-1">
    <h4>
        <!-- Book title -->
        @Model.Title
        <!-- Badge showing book price -->
        <span class="badge rounded-pill bg-primary text-white float-end"><small>$@Model.Price</small></span>
    </h4>
    <ul>
        <!-- Book details -->
        <li>Author: @Model.Author</li> <!-- Author name -->
        <li>Publisher: @Model.Publisher</li> <!-- Publisher name -->
        <li>ISBN: @Model.Isbn</li> <!-- ISBN number -->
        <li>Classification: @Model.Classification</li> <!-- Book classification -->
        <li>Category: @Model.Category</li> <!-- Book category -->
        <li>Page Count: @Model.PageCount</li> <!-- Number of pages -->
    </ul>
</div>
